{% extends "base.html.twig" %}

{% block content %}

    <section class="row">
        <div class="col-md-12">
            <div class="content">
                <header class="content__header">
                    <header class="content__header">
                        <h1 class="content__header-title">Voor Developers</h1>
                    </header>
                </header>
            </div><!-- ./content -->
        </div><!-- ./col -->
    </section>

    <div class="row theme--small-padding">

        <div class="col-md-8">

            <div class="content-background">
                <div class="content">
                    <p>De overheid probeert developers zo goed mogelijk te ondersteunen bij hun werkzaamheden, hiervoor
                        hebben we een speciale toolkit ontwikkeld.
                    </p>

                    <p>
                        <a href="{{ path('app_developer_toolkit') }}" class="btn">Developers Toolkit</a>
                    </p>
                </div><!-- /.content -->
            </div><!-- /.content-background -->

            <!-- Page Break -->
            <div style="height: 20px"></div>

            <h2>Challenges</h2>

            {% include 'widgets/list-card-items.html.twig' with{'view':'app_challenge_view', 'items': challenges} %}
        </div><!-- ./col -->

        <div class="col-md-4">

            {% include'widgets/developer-menu.html.twig' %}

            <!-- Page Break -->
            <div style="height: 20px"></div>
           
            {% include'widgets/event-list.html.twig' %}

            <!-- Page Break -->
            <div style="height: 20px"></div>

            <h2>Artikelen</h2>
            {% include 'widgets/list-broad-items-small.html.twig' with{'view':'app_artikel_view','index':'app_artikel_index', 'items':artikelen} %}


        </div><!-- ./col -->
    </div><!-- ./row -->

    <script>
        System.import('/uno/components/donut-chart/donut-chart.js').then(function (module) {
            var donutChart = new module.DonutChart(document.getElementById('complicancy_donut-chart'));
            donutChart.value = 80;
            donutChart.draw();
        });
    </script>

{% endblock %}
